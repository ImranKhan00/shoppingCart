@model IEnumerable<cmsShoppingCart.Models.Product>

@{
	ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			@* <th>
				@Html.DisplayNameFor(model => model.Id)
				</th>*@
			<th>
				@*@Html.DisplayNameFor(model => model.Name)*@
				Name
			</th>
			@*<th>
				@Html.DisplayNameFor(model => model.Slug)
				</th>*@
			@* <th>
				@Html.DisplayNameFor(model => model.Description)
				</th>*@
			<th>
				@*@Html.DisplayNameFor(model => model.Price)*@
				Price
			</th>
			<th>
				@*@Html.DisplayNameFor(model => model.CategoryId)*@
				Category
			</th>
			<th>
				@*@Html.DisplayNameFor(model => model.Image)*@
				Image
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				@*<td>
					@Html.DisplayFor(modelItem => item.Id)
					</td>*@
				<td>
					@*@Html.DisplayFor(modelItem => item.Name)*@
					@item.Name
				</td>
				@* <td>
					@Html.DisplayFor(modelItem => item.Slug)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Description)
					</td>*@
				<td>
					@*@Html.DisplayFor(modelItem => item.Price)*@
					@item.Price

				</td>
				<td>
					@*@Html.DisplayFor(modelItem => item.CategoryId)*@
					@item.Category.Name
				</td>
				<td>
					@*@Html.DisplayFor(modelItem => item.Image)*@
					@item.Image
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>|
					<a asp-action="Details" asp-route-id="@item.Id">Details</a>|
					@if (item.Slug != "home")
					{
						<a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="d-flex w-100 justify-content">
	<pagination page-count="@ViewBag.TotalPages" page-target="/Admin/Products" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
</div>

